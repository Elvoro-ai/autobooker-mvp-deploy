# ===========================================
# AUTOBOOKER AI - CONFIGURATION PRODUCTION
# ===========================================

# Application
NEXT_PUBLIC_APP_NAME=AutoBooker AI
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_BASE_URL=https://autobooker-mvp-deploy.vercel.app
NODE_ENV=production

# ===========================================
# SÉCURITÉ & AUTHENTIFICATION
# ===========================================

# Clé de chiffrement pour les données PII (générer avec openssl rand -hex 32)
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# Clé API pour les tests de charge (générer une clé forte)
LOAD_TEST_API_KEY=your-secure-load-test-api-key

# JWT Secret (si authentification JWT implémentée)
JWT_SECRET=your-jwt-secret-key

# ===========================================
# SERVICES EXTERNES - CALENDRIERS
# ===========================================

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALENDAR_ID=primary
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Microsoft Outlook Integration
OUTLOOK_CLIENT_ID=your-outlook-app-id
OUTLOOK_CLIENT_SECRET=your-outlook-app-secret
OUTLOOK_TENANT_ID=your-outlook-tenant-id
OUTLOOK_CALENDAR_ID=your-outlook-calendar-id

# ===========================================
# SERVICES EXTERNES - NOTIFICATIONS
# ===========================================

# Resend (Email)
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@autobooker.ai
RESEND_FROM_NAME=AutoBooker AI

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+33123456789
TWILIO_WHATSAPP_FROM=whatsapp:+33123456789

# ===========================================
# BASE DE DONNÉES (OPTIONNEL)
# ===========================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Neon Database (alternative)
NEON_DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# Redis/Upstash (pour sessions et cache)
REDIS_URL=redis://user:pass@host:port
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# ===========================================
# SERVICES IA & LLM
# ===========================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2000

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ===========================================
# MONITORING & OBSERVABILITÉ
# ===========================================

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=autobooker-ai

# Vercel Analytics
ANALYTICS_ID=your-vercel-analytics-id

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# PostHog (Product analytics)
POSTHOG_KEY=phc_your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ===========================================
# WEBHOOKS & INTÉGRATIONS
# ===========================================

# Webhook endpoints pour notifications
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Zapier (si intégrations tierces)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your/webhook

# ===========================================
# CONFIGURATION MÉTIER
# ===========================================

# Informations entreprise
COMPANY_NAME=Votre Entreprise
COMPANY_EMAIL=contact@votre-entreprise.com
COMPANY_PHONE=+33123456789
COMPANY_ADDRESS=123 Rue Example, 75001 Paris

# Praticien par défaut
DEFAULT_PRACTITIONER_NAME=Dr. Dupont
DEFAULT_PRACTITIONER_EMAIL=dr.dupont@votre-entreprise.com

# Configuration horaires (JSON)
BUSINESS_HOURS='{"monday":{"open":"09:00","close":"18:00"},"tuesday":{"open":"09:00","close":"18:00"},"wednesday":{"open":"09:00","close":"18:00"},"thursday":{"open":"09:00","close":"18:00"},"friday":{"open":"09:00","close":"17:00"},"saturday":{"open":"09:00","close":"13:00"},"sunday":{"open":null,"close":null}}'

# Services disponibles (JSON)
AVAILABLE_SERVICES='{"consultation":{"duration":60,"name":"Consultation standard"},"consultation_longue":{"duration":90,"name":"Consultation approfondie"},"suivi":{"duration":30,"name":"Rendez-vous de suivi"},"urgence":{"duration":45,"name":"Consultation urgente"},"teleconsultation":{"duration":30,"name":"Téléconsultation"}}'

# Configuration timezone
TIMEZONE=Europe/Paris

# ===========================================
# LIMITES & QUOTAS
# ===========================================

# Rate limiting
RATE_LIMIT_AI_CHAT=20
RATE_LIMIT_BOOKING=10
RATE_LIMIT_GENERAL=100

# Limites de session
SESSION_TTL_HOURS=24
SESSION_MAX_INACTIVE_HOURS=4

# ===========================================
# FEATURE FLAGS
# ===========================================

# Fonctionnalités expérimentales
FEATURE_ADVANCED_AI=true
FEATURE_MULTI_LANGUAGE=true
FEATURE_WEBHOOK_NOTIFICATIONS=true
FEATURE_ANALYTICS_DASHBOARD=false
FEATURE_WHITE_LABEL=false

# Mode développement/debug
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ===========================================
# REMARQUES IMPORTANTES
# ===========================================

# 1. Copiez ce fichier vers .env.local pour le développement
# 2. Configurez les vraies valeurs dans le dashboard Vercel pour la production
# 3. Ne jamais committer de vraies clés API dans le repository
# 4. Utilisez Vercel CLI pour sync les variables: vercel env pull
# 5. Pour la production, activez tous les services externes